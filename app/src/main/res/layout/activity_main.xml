<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/my_grid"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="39dp"
        android:text="0"
        android:textSize="100dp">

    </TextView>

    <GridLayout
    android:id="@+id/my_grid"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="5"
    android:rowCount="5"
    android:layout_alignParentBottom="true"
     >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="96dp"
        android:layout_height="102dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="center"
        android:padding="30dp"
        android:text="1"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="102dp"
        android:layout_height="98dp"
        android:layout_row="0"
        android:layout_column="1"
        android:gravity="center"
        android:padding="30dp"
        android:text="2"
        android:textAppearance="?android:attr/textAppearanceLarge" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="86dp"
        android:layout_height="106dp"
        android:layout_row="0"
        android:layout_column="2"
        android:padding="30dp"
        android:gravity="center"

        android:text="3"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    //3rd row starts from here.

    <TextView
        android:id="@+id/textViewPlus"
        android:layout_width="102dp"
        android:layout_height="98dp"

        android:layout_row="0"
        android:layout_column="3"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="+"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView

        android:id="@+id/textViewC"
        android:layout_width="95dp"
        android:layout_height="100dp"
        android:layout_row="3"
        android:layout_column="2"
        android:gravity="center"
        android:padding="30dp"
        android:text="C"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="108dp"
        android:layout_height="105dp"
        android:layout_row="1"
        android:layout_column="0"
        android:gravity="center"
        android:padding="30dp"
        android:text="4"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="104dp"
        android:layout_height="102dp"
        android:layout_row="1"
        android:layout_column="1"
        android:gravity="center"
        android:padding="30dp"

        android:text="5"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="91dp"
        android:layout_height="95dp"
        android:layout_row="1"
        android:layout_column="2"
        android:padding="30dp"
        android:text="6"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textViewMinus"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="3"
        android:gravity="center"
        android:padding="30dp"
        android:text="-"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textViewDot"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_row="3"
        android:layout_column="0"
        android:gravity="center"
        android:padding="30dp"
        android:text="."
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:gravity="center"
        android:padding="30dp"
        android:text="7"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:gravity="center"
        android:padding="30dp"

        android:text="8"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="2"
        android:gravity="center"
        android:padding="30dp"
        android:text="9"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textViewTimes"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="3"
        android:gravity="center"
        android:padding="30dp"
        android:text="*"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView0"
        android:layout_width="102dp"
        android:layout_height="98dp"
        android:gravity="center"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_gravity="center"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textViewDivide"
        android:layout_width="102dp"
        android:layout_height="98dp"
        android:layout_row="3"
        android:layout_column="3"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="/"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:background="@android:color/holo_blue_dark"
        android:id="@+id/textViewEquals"
        android:layout_width="102dp"
        android:layout_height="98dp"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="="
        android:textAppearance="?android:attr/textAppearanceLarge" />
</GridLayout>
</RelativeLayout>


